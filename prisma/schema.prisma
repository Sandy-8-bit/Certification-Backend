generator client {
  provider = "prisma-client-js"
  url      = env("DATABASE_URL")
}

datasource db {
  provider = "postgresql"
   url      = env("DATABASE_URL")
}

enum Role {
  admin
  user
}

model User {
  id        String   @id            // Supabase user.id (UUID)
  email     String   @unique
  name      String?
  role      Role     @default(user)
  createdAt DateTime @default(now())
}